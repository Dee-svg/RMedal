<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/function_item_ll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:background="@drawable/selectorbtn_white_whitesmoke"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/function_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hight_40"
            android:paddingRight="@dimen/hight_15"
            android:visibility="gone"
            android:paddingLeft="@dimen/hight_15"
            android:layout_marginBottom="@dimen/hight_5"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/function_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>