<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_bg"
    android:clipToPadding="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <com.veni.tools.widget.overscroll.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_bg"
        android:clipToPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/personal_head_layout"
                android:layout_width="match_parent"
                android:layout_height="173dp">

                <ImageView
                    android:id="@+id/personal_bg_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="#009688" />

                <LinearLayout
                    android:id="@+id/personal_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/personal_touxiang"
                        android:layout_width="@dimen/hight_50"
                        android:layout_height="@dimen/hight_50" />

                    <TextView
                        android:id="@+id/personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="30"
                        android:paddingTop="@dimen/hight_3"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/personal_set"
                    android:layout_width="@dimen/hight_40"
                    android:layout_height="@dimen/hight_40"
                    android:padding="@dimen/hight_10"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_set"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:divider="@drawable/divider_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/personal_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_48"
                    android:background="@drawable/selectorbtn_white_whitesmoke"
                    android:drawablePadding="@dimen/hight_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/show_qrcode"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/personal_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_48"
                    android:background="@drawable/selectorbtn_white_whitesmoke"
                    android:drawablePadding="@dimen/hight_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/nav_aboutus"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/personal_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_48"
                    android:background="@drawable/selectorbtn_white_whitesmoke"
                    android:drawablePadding="@dimen/hight_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/nav_feedback"
                    android:textSize="@dimen/font_15" />


                <TextView
                    android:id="@+id/personal_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_48"
                    android:background="@drawable/selectorbtn_white_whitesmoke"
                    android:drawablePadding="@dimen/hight_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/nav_update"
                    android:textSize="@dimen/font_15" />


                <TextView
                    android:id="@+id/personal_exit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/hight_48"
                    android:background="@drawable/selectorbtn_white_whitesmoke"
                    android:drawablePadding="@dimen/hight_15"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/nav_logout"
                    android:textSize="@dimen/font_15" />
            </LinearLayout>

        </LinearLayout>

    </com.veni.tools.widget.overscroll.OverScrollView>

</LinearLayout>
