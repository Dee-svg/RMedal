<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windows_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/hight_60"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_start"
            android:layout_width="@dimen/hight_zero"
            android:layout_height="@dimen/hight_45"
            android:layout_weight="1"
            android:background="@color/dodgerblue"
            android:gravity="center"
            android:layout_marginRight="@dimen/hight_15"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/step_end"
            android:layout_width="@dimen/hight_zero"
            android:layout_height="@dimen/hight_45"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/hight_15"
            android:background="@color/dodgerblue"
            android:gravity="center"
            android:text="@string/end"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/step_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/deep_gray_2"
        android:textSize="@dimen/font_14" />

</LinearLayout>
